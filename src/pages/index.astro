---
import BaseLayout from "./../layouts/BaseLayout.astro";

import { Image } from "astro:assets";
import hero from "../images/Hero.svg";
import SocialIcon from "../components/SocialMediaIcon.astro";

import project1 from "../images/project1.webp";
import project2 from "../images/project2.webp";
import project3 from "../images/project3.webp";

import html from "../images/html-1.svg";
import css from "../images/css-3.svg";
import js from "../images/javascript-r.svg";
import tailwind from "../images/tailwind-css-2.svg";
import bun from "../images/bun-1.svg";
import astro from "../images/astrojs.svg";
import figma from "../images/figma-icon.svg";
import wp from "../images/wordpress-icon-1.svg";
import github from "../images/github-icon-1.svg";
import nodejs from "../images/nodejs-icon.svg";

// Data proyek
const projects = [
	{
		title: "Wordpres website",
		description: "Membuat website dengan cms wordpres",
		image: project1,
	},
	{
		title: "Web design",
		description: "Mendesign ui/ux dan website",
		image: project2,
	},
	{
		title: "Membuat website dengan Framework",
		description: "Membuat website dengan framework seperti astro",
		image: project3,
	},
];
---

<BaseLayout>
	<!-- Hero Section -->
	<section
		id="hero"
		class="min-h-screen flex items-center justify-center text-center py-20"
	>
		<div class="max-w-3xl mx-auto px-4">
			<h1 class="text-4xl md:text-6xl font-bold mb-6 animate-fade-in">
				Halo, Saya <span class="text-blue-600 dark:text-blue-400"
					>Agung</span
				>
			</h1>
			<p
				class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-8 animate-fade-in animation-delay-100"
			>
				Seorang profesional kreatif yang berspesialisasi dalam
				pengembangan web modern.
			</p>
			<a
				href="#projects"
				class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-8 rounded-full transition animate-fade-in animation-delay-200"
				>View My Work</a
			>
		</div>
	</section>

	<!-- About Section -->
	<section id="about" class="py-20">
		<div class="max-w-6xl mx-auto px-4">
			<h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">
				Tentang Saya
			</h2>

			<div class="flex flex-col md:flex-row items-center gap-12">
				<div class="md:w-1/2 animate-fade-in">
					<Image
						src={hero}
						alt="Profile"
						class="rounded-lg shadow-xl w-full max-w-md mx-auto"
					/>
				</div>

				<div class="md:w-1/2 animate-fade-in animation-delay-100">
					<p class="text-lg mb-6">
						Saya seorang pengembang web dengan pengalaman lebih dari
						5 tahun dalam membangun aplikasi modern dan responsif.
					</p>
					<p class="text-lg mb-6">
						Spesialisasi saya meliputi pengembangan frontend
						menggunakan teknologi terbaru seperti React, Vue, dan
						tentu saja Astro JS.
					</p>
					<p class="text-lg">
						Saya percaya dalam menciptakan pengalaman pengguna yang
						mulus dengan perhatian pada detail dan kinerja.
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Tech Stack Section -->
	<section id="tech-stack" class="py-20 bg-gray-50 dark:bg-gray-800">
		<div class="max-w-6xl mx-auto px-4">
			<h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">
				Tech Stack
			</h2>

			<div
				class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6"
			>
				<!-- Frontend -->
				<div class="tech-item group">
					<div
						class="p-6 bg-white dark:bg-gray-700 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300 h-full flex flex-col items-center"
					>
						<Image
							src={html}
							alt="HTML5"
							class="h-16 w-16 mb-4 group-hover:scale-110 transition-transform"
						/>
						<h3 class="font-medium text-center">HTML5</h3>
					</div>
				</div>

				<div class="tech-item group">
					<div
						class="p-6 bg-white dark:bg-gray-700 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300 h-full flex flex-col items-center"
					>
						<Image
							src={css}
							alt="CSS3"
							class="h-16 w-16 mb-4 group-hover:scale-110 transition-transform"
						/>
						<h3 class="font-medium text-center">CSS3</h3>
					</div>
				</div>

				<div class="tech-item group">
					<div
						class="p-6 bg-white dark:bg-gray-700 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300 h-full flex flex-col items-center"
					>
						<Image
							src={js}
							alt="JavaScript"
							class="h-16 w-16 mb-4 group-hover:scale-110 transition-transform"
						/>
						<h3 class="font-medium text-center">JavaScript</h3>
					</div>
				</div>

				<div class="tech-item group">
					<div
						class="p-6 bg-white dark:bg-gray-700 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300 h-full flex flex-col items-center"
					>
						<Image
							src={wp}
							alt="wordpress"
							class="h-16 w-16 mb-4 group-hover:scale-110 transition-transform"
						/>
						<h3 class="font-medium text-center">Wordpress</h3>
					</div>
				</div>

				<div class="tech-item group">
					<div
						class="p-6 bg-white dark:bg-gray-700 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300 h-full flex flex-col items-center"
					>
						<Image
							src={tailwind}
							alt="Tailwind CSS"
							class="h-16 w-16 mb-4 group-hover:scale-110 transition-transform"
						/>
						<h3 class="font-medium text-center">Tailwind CSS</h3>
					</div>
				</div>

				<!-- Backend -->
				<div class="tech-item group">
					<div
						class="p-6 bg-white dark:bg-gray-700 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300 h-full flex flex-col items-center"
					>
						<Image
							src={bun}
							alt="bun.js"
							class="h-16 w-16 mb-4 group-hover:scale-110 transition-transform"
						/>
						<h3 class="font-medium text-center">Bun</h3>
					</div>
				</div>

				<div class="tech-item group">
					<div
						class="p-6 bg-white dark:bg-gray-700 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300 h-full flex flex-col items-center"
					>
						<Image
							src={astro}
							alt="Express"
							class="h-16 w-16 mb-4 group-hover:scale-110 transition-transform"
						/>
						<h3 class="font-medium text-center">Astro</h3>
					</div>
				</div>

				<!-- Tools -->
				<div class="tech-item group">
					<div
						class="p-6 bg-white dark:bg-gray-700 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300 h-full flex flex-col items-center"
					>
						<Image
							src={nodejs}
							alt="nodejs"
							class="h-16 w-16 mb-4 group-hover:scale-110 transition-transform"
						/>
						<h3 class="font-medium text-center">Node Js</h3>
					</div>
				</div>

				<div class="tech-item group">
					<div
						class="p-6 bg-white dark:bg-gray-700 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300 h-full flex flex-col items-center"
					>
						<Image
							src={github}
							alt="github"
							class="h-16 w-16 mb-4 group-hover:scale-110 transition-transform"
						/>
						<h3 class="font-medium text-center">Github</h3>
					</div>
				</div>

				<div class="tech-item group">
					<div
						class="p-6 bg-white dark:bg-gray-700 rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300 h-full flex flex-col items-center"
					>
						<Image
							src={figma}
							alt="Figma"
							class="h-16 w-16 mb-4 group-hover:scale-110 transition-transform"
						/>
						<h3 class="font-medium text-center">Figma</h3>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Projects Section -->
	<section id="projects" class="py-20 bg-gray-100 dark:bg-gray-800">
		<div class="max-w-6xl mx-auto px-4">
			<h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">
				Apa Yang Saya Kerjakan?
			</h2>

			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				{
					projects.map((project) => (
						<div class="project-card bg-white dark:bg-gray-700 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
							<Image
								src={project.image}
								alt={project.title}
								class="w-full h-48 object-cover"
							/>
							<div class="p-6">
								<h3 class="text-xl font-bold mb-2">
									{project.title}
								</h3>
								<p class="text-gray-600 dark:text-gray-300">
									{project.description}
								</p>
							</div>
						</div>
					))
				}
			</div>
		</div>
	</section>

	<!-- Contact Section -->
	<section id="contact" class="py-20">
		<div class="max-w-3xl mx-auto px-4 text-center">
			<h2 class="text-3xl md:text-4xl font-bold mb-6">Let's Connect</h2>
			<p class="text-xl text-gray-600 dark:text-gray-300 mb-12">
				Jangan ragu untuk menghubungi kami melalui salah satu platform
				ini.
			</p>

			<div class="flex justify-center space-x-6">
				<SocialIcon
					platform="github"
					url="https://github.com/username"
				/>
				<SocialIcon
					platform="linkedin"
					url="https://linkedin.com/in/username"
				/>
				<SocialIcon platform="email" url="mailto:email@example.com" />
			</div>
		</div>
	</section>
</BaseLayout>
